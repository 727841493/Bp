@{
    ViewBag.Title = "用户页面";
}

@Scripts.Render("~/bundles/user")

<div class="container-fluid main-content">
    <div class="social-wrapper">
        <div id="social-container" class="isotope" style="position: relative; overflow: hidden; height: 2453px; width: 1110px;">
            <div class="item widget-container fluid-height social-entry isotope-item" 
                 style="position: absolute; left: 0px; top: 0px; opacity: 1; transform: translate3d(0px, 200px, 0px);">
                <div class="widget-content padded">
                    <div class="profile-info clearfix">
                        <img width="50" height="50" class="social-avatar pull-left" src="images/avatar-female2.png">
                        <div class="profile-details">
                            <a class="user-name" href="#">Stan Humanbot</a>
                            <p>
                                <em></em>
                            </p>
                        </div>
                    </div>
                    <p class="content">
                       
                    </p>
                    <div class="btn btn-sm btn-default-outline">
                        <i class="icon-thumbs-up-alt"></i>
                    </div>
                    <div class="btn btn-sm btn-default-outline">
                        <i class="icon-mail-forward"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>